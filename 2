-- T·∫°o c√°c tab
for i, tab in ipairs(tabButtons) do
    local tabBtn = Instance.new("TextButton")
    tabBtn.Text = tab.Icon .. " " .. tab.Name
    tabBtn.Size = UDim2.new(0, 100, 0, 35)
    tabBtn.Position = UDim2.new(0, (i-1)*110, 0, 0)
    tabBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
    tabBtn.TextColor3 = Color3.fromRGB(200, 200, 200)
    tabBtn.Font = Enum.Font.Gotham
    tabBtn.TextSize = 14
    tabBtn.Parent = TabContainer
    
    -- T·∫°o frame cho n·ªôi dung tab
    local tabFrame = Instance.new("Frame")
    tabFrame.Size = UDim2.new(1, 0, 1, 0)
    tabFrame.BackgroundTransparency = 1
    tabFrame.Visible = (tab.Name == "Trang Ch·ªß")
    tabFrame.Parent = Content
    tabFrames[tab.Name] = tabFrame
    
    tabBtn.MouseButton1Click:Connect(function()
        currentTab = tab.Name
        for name, frame in pairs(tabFrames) do
            frame.Visible = (name == tab.Name)
        end
        updateTabButtons()
    end)
    
    -- Hi·ªáu ·ª©ng hover
    tabBtn.MouseEnter:Connect(function()
        if currentTab ~= tab.Name then
            game:GetService("TweenService"):Create(tabBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(50, 50, 70)}):Play()
        end
    end)
    
    tabBtn.MouseLeave:Connect(function()
        if currentTab ~= tab.Name then
            game:GetService("TweenService"):Create(tabBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 55)}):Play()
        end
    end)
end

function updateTabButtons()
    for _, btn in ipairs(TabContainer:GetChildren()) do
        if btn:IsA("TextButton") then
            local tabName = string.sub(btn.Text, 4)
            if tabName == currentTab then
                btn.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
                btn.TextColor3 = Color3.fromRGB(255, 255, 255)
            else
                btn.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
                btn.TextColor3 = Color3.fromRGB(200, 200, 200)
            end
        end
    end
end

