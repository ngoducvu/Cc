    Workspace.Gravity = value
    print("Tr·ªçng l·ª±c: " .. value)
end

-- 15. XOAY 360 ƒê·ªò
function spin360()
    local spinConnection
    spinConnection = RunService.Heartbeat:Connect(function()
        Player.Character.HumanoidRootPart.CFrame = Player.Character.HumanoidRootPart.CFrame * CFrame.Angles(0, math.rad(10), 0)
    end)
    
    -- D·ª´ng sau 3 gi√¢y
    wait(3)
    spinConnection:Disconnect()
    print("Xoay 360¬∞ ƒë√£ ho√†n th√†nh")
end

-- 16. THAY ƒê·ªîI M√ÄU (CLIENT)
function changeColor(color)
    if Player.Character then
        for _, part in pairs(Player.Character:GetChildren()) do
            if part:IsA("BasePart") then
                part.Color = color
            end
        end
    end
    print("ƒê√£ ƒë·ªïi m√†u")
end

-- 17. DISCO MODE
local discoEnabled = false
function toggleDisco()
    discoEnabled = not discoEnabled
    if discoEnabled then
        local colors = {
            Color3.fromRGB(255, 0, 0),    -- ƒê·ªè
            Color3.fromRGB(0, 255, 0),    -- Xanh l√°
            Color3.fromRGB(0, 0, 255),    -- Xanh d∆∞∆°ng
            Color3.fromRGB(255, 255, 0),  -- V√†ng
            Color3.fromRGB(255, 0, 255),  -- H·ªìng
            Color3.fromRGB(0, 255, 255)   -- Cyan
        }
        
        local i = 1
        RunService.Heartbeat:Connect(function()
            if Player.Character then
                for _, part in pairs(Player.Character:GetChildren()) do
                    if part:IsA("BasePart") then
                        part.Color = colors[i]
                    end
                end
                i = i + 1
                if i > #colors then i = 1 end
            end
        end)
        print("Disco Mode: B·∫¨T")
    else
        print("Disco Mode: T·∫ÆT")
    end
end

-- 18. SAO CH√âP AVATAR
function copyAvatar(targetPlayer)
    local targetCharacter = targetPlayer.Character
    for _, part in pairs(targetCharacter:GetChildren()) do
        if part:IsA("BasePart") then
            local clone = part:Clone()
            clone.Parent = Player.Character
        elseif part:IsA("Accessory") then
            local clone = part:Clone()
            clone.Parent = Player.Character
        end
    end
    print("ƒê√£ sao ch√©p avatar c·ªßa: " .. targetPlayer.Name)
end

-- 19. K√âO V·ªÄ NPC
function pullNPCs()
    for _, npc in pairs(workspace:GetChildren()) do
        if npc:FindFirstChild("Humanoid") then
            local bodyPosition = Instance.new("BodyPosition")
            bodyPosition.P = 10000
            bodyPosition.D = 1000
            bodyPosition.maxForce = Vector3.new(math.huge, math.huge, math.huge)
            bodyPosition.Position = Player.Character.HumanoidRootPart.Position
            bodyPosition.Parent = npc.HumanoidRootPart
            
            game:GetService("Debris"):AddItem(bodyPosition, 3)
        end
    end
    print("ƒê√£ k√©o t·∫•t c·∫£ NPC v·ªÅ v·ªã tr√≠ c·ªßa b·∫°n")
end

-- 20. NH√åN TRONG B√ìNG T·ªêI
function nightVision()
    Lighting.Ambient = Color3.fromRGB(255, 255, 255)
    Lighting.Brightness = 1
    Lighting.GlobalShadows = false
    print("Nh√¨n trong b√≥ng t·ªëi: B·∫¨T")
end

-- T·∫†O N√öT CH·ª®C NƒÇNG CHO C√ÅC TAB
function createButton(parent, text, callback, color)
    local button = Instance.new("TextButton")
    button.Text = text
    button.Size = UDim2.new(0.9, 0, 0, 40)
    button.Position = UDim2.new(0.05, 0, 0, #parent:GetChildren() * 45)
    button.BackgroundColor3 = color or Color3.fromRGB(50, 50, 70)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.AutoButtonColor = true
    button.Parent = parent
    
    button.MouseButton1Click:Connect(callback)
    
    -- Hi·ªáu ·ª©ng hover
    button.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(70, 70, 90)}):Play()
    end)
    
    button.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {BackgroundColor3 = color or Color3.fromRGB(50, 50, 70)}):Play()
    end)
    
    return button
end

