-- C√ÅC H√ÄM CH·ª®C NƒÇNG

-- 1. AIMBOT
function toggleAimbot()
    AimbotEnabled = not AimbotEnabled
    if AimbotEnabled then
        print("Aimbot ƒë√£ b·∫≠t")
        RunService.Heartbeat:Connect(function()
            if AimbotTarget and AimbotTarget.Character and AimbotTarget.Character:FindFirstChild("HumanoidRootPart") then
                local targetPos = AimbotTarget.Character.HumanoidRootPart.Position
                Player.Character:SetPrimaryPartCFrame(CFrame.new(Player.Character.PrimaryPart.Position, Vector3.new(targetPos.X, Player.Character.PrimaryPart.Position.Y, targetPos.Z)))
            end
        end)
    else
        print("Aimbot ƒë√£ t·∫Øt")
    end
end

-- 2. GOD MODE
function toggleGodMode()
    GodModeEnabled = not GodModeEnabled
    if GodModeEnabled then
        Player.Character.Humanoid.MaxHealth = math.huge
        Player.Character.Humanoid.Health = math.huge
        Player.Character.Humanoid.Name = "GodHumanoid"
        
        -- T·∫°o forcefield
        local forceField = Instance.new("ForceField")
        forceField.Parent = Player.Character
        print("God Mode: B·∫¨T")
    else
        Player.Character.Humanoid.MaxHealth = 100
        Player.Character.Humanoid.Health = 100
        Player.Character.Humanoid.Name = "Humanoid"
        
        -- X√≥a forcefield
        for _, child in pairs(Player.Character:GetChildren()) do
            if child:IsA("ForceField") then
                child:Destroy()
            end
        end
        print("God Mode: T·∫ÆT")
    end
end

-- 3. ESP (X-RAY)
function toggleESP()
    ESPEnabled = not ESPEnabled
    if ESPEnabled then
        ESPFolder.Parent = workspace
        Lighting.FogEnd = 100000
        
        for _, player in pairs(game:GetService("Players"):GetPlayers()) do
            if player ~= Player and player.Character then
                createESP(player.Character)
            end
        end
        
        game:GetService("Players").PlayerAdded:Connect(function(player)
            player.CharacterAdded:Connect(function(character)
                if ESPEnabled then
                    createESP(character)
                end
            end)
        end)
        
        print("ESP/X-Ray: B·∫¨T")
    else
        ESPFolder:Destroy()
        ESPFolder = Instance.new("Folder")
        Lighting.FogEnd = OriginalFogEnd
        print("ESP/X-Ray: T·∫ÆT")
    end
end

function createESP(character)
    local highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.fromRGB(255, 50, 50)
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    highlight.FillTransparency = 0.5
    highlight.OutlineTransparency = 0
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Parent = ESPFolder
    highlight.Adornee = character
    
    local billboard = Instance.new("BillboardGui")
    billboard.Size = UDim2.new(0, 200, 0, 50)
    billboard.StudsOffset = Vector3.new(0, 3, 0)
    billboard.Adornee = character:WaitForChild("Head")
    billboard.Parent = ESPFolder
    
    local nameLabel = Instance.new("TextLabel")
    nameLabel.Text = character.Name
    nameLabel.Size = UDim2.new(1, 0, 0.5, 0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 16
    nameLabel.Parent = billboard
    
    local distanceLabel = Instance.new("TextLabel")
    distanceLabel.Size = UDim2.new(1, 0, 0.5, 0)
    distanceLabel.Position = UDim2.new(0, 0, 0.5, 0)
    distanceLabel.BackgroundTransparency = 1
    distanceLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
    distanceLabel.Font = Enum.Font.Gotham
    distanceLabel.TextSize = 14
    distanceLabel.Parent = billboard
    
    RunService.Heartbeat:Connect(function()
        if character and character:FindFirstChild("HumanoidRootPart") then
            local distance = (Player.Character.HumanoidRootPart.Position - character.HumanoidRootPart.Position).Magnitude
            distanceLabel.Text = tostring(math.floor(distance)) .. " studs"
        end
    end)
end

